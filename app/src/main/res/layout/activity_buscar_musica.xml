<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layoutGruposBuscarMusica"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondodetodaslaspantallas"
    tools:context=".Activity_BuscarMusica">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutGruposBuscar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fondodetodaslaspantallas"
            tools:context=".ActivityGrupoPrincipal">

            <RelativeLayout
                android:id="@+id/layout_GruposBuscarBtnAtras"
                android:layout_width="0dp"
                android:layout_height="65dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- ImageButton -->
                <ImageButton
                    android:id="@+id/btn_BuscarAtrasMusicas"
                    android:layout_width="54dp"
                    android:layout_height="46dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/textview_BuscarbotAtrasMusicas"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/iconoatras" />

                <!-- TextView -->
                <TextView
                    android:id="@+id/textview_BuscarbotAtrasMusicas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="62dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/atras"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/fuente_jost_global"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_BuscarAtrasMusicas"
                    app:layout_constraintTop_toTopOf="parent" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutBuscarMusica2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_GruposBuscarBtnAtras">

                <TextView
                    android:id="@+id/txtviewsBuscarMusica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="19dp"
                    android:text="@string/titulo"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/fuente_jost_global"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayout38"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayoutBuscarMusica2">

                <!-- CardView 2 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewBuscarmusicas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardBackgroundColor="@color/elementBackground"
                    app:cardCornerRadius="100dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <!-- ConstraintLayout for CardView 2 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:paddingRight="5dp">

                        <ImageView
                            android:id="@+id/imageViewBuscarMusica"
                            android:layout_width="25dp"
                            android:layout_height="31dp"
                            android:contentDescription="Image"
                            android:src="@drawable/busquedamusica"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.394"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.545" />

                        <ImageView
                            android:id="@+id/imageViewGruposBuscar2"
                            android:layout_width="28dp"
                            android:layout_height="31dp"
                            android:layout_marginEnd="29dp"
                            android:contentDescription="Image"
                            android:src="@drawable/busquedamusica"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/editTextGruposBuscarMusicass"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/editTextGruposBuscarMusicass"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_weight="1"
                            android:hint="Buscar"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/imageViewGruposBuscar2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/txtBuscarBuscarMusicas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="@string/buscarMusica"
                            android:textSize="15sp"
                            android:fontFamily="@font/fuente_jost_global"
                            android:textStyle="bold"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.016"
                            app:layout_constraintStart_toEndOf="@+id/imageViewBuscarMusica"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_GruposBuscarmusicas"
                android:layout_width="0dp"
                android:layout_height="522dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/fuente_jost_global"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout38"/>

            <SearchView
                android:id="@+id/searchview_NuevoGrupoIntegrantesBuscar"
                style="@style/CustomSearchViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="180dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="16dp"
                android:pointerIcon="arrow"
                android:queryBackground="@color/white"
                android:queryHint="@string/buscar_nombreUsuario"
                android:searchIcon="@drawable/busquedamusica"
                app:layout_constraintBottom_toTopOf="@+id/recyclerview_GruposBuscarmusicas"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:theme="@style/CustomSearchViewStyle" />




        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.drawerlayout.widget.DrawerLayout >