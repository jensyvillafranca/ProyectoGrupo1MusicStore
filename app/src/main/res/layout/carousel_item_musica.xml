<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="2dp"
    android:layout_marginEnd="10dp"

    android:layout_marginBottom="2dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewImageCarouselMusica"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="@android:color/transparent"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageviewCarouselItemMusica"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/iconodecadaarchivomusica" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textviewCarouselItemMusica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/fuente_jost_global"
        android:gravity="center"
        android:text="@string/musica"
        android:textColor="@color/lightGray90"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardviewImageCarouselMusica" />
</androidx.constraintlayout.widget.ConstraintLayout>