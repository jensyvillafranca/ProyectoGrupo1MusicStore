<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_mainItem"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginBottom="10dp"
    android:padding="16dp">
    <ImageView
        android:id="@+id/imageviewListItemImagesss"
        android:layout_width="62dp"
        android:layout_height="57dp"
        android:contentDescription="Image"
        android:src="@drawable/iconomusicas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/txtListItemNombreMusicaAudios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombresmusica"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/layout_mainItem"
        app:layout_constraintStart_toEndOf="@+id/imageviewListItemImagesss"
        app:layout_constraintEnd_toStartOf="@+id/iconLayout" />

    <TextView
        android:id="@+id/txtListItemCreadoMusica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/autor"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtListItemNombreMusicaAudios"
        app:layout_constraintStart_toEndOf="@+id/imageviewListItemImagesss"
        app:layout_constraintEnd_toStartOf="@+id/iconLayout" />

    <TextView
        android:id="@+id/txtListtGeneros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genero"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtListItemCreadoMusica"
        app:layout_constraintStart_toEndOf="@+id/imageviewListItemImagesss"
        app:layout_constraintEnd_toStartOf="@+id/iconLayout" />

    <LinearLayout
        android:id="@+id/iconLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imageviewMusicaIconoFavoritos"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Icon 3"
            android:src="@drawable/favoritodesmarcado" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>