<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:padding="16dp"
    android:background="@drawable/dialog_huella_background">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Configurar huella dactilar"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="27dp"/>

    <TextView
        android:id="@+id/textViewSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:layout_marginTop="13dp"
        android:text="Para usar esta funciÃ³n, primero debes configurar tu huella dactilar en el dispositivo."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/huella"
        android:layout_width="42dp"
        android:layout_height="43dp"
        android:layout_below="@id/textViewSubtitle"
        android:layout_marginStart="130dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/huella" />

</RelativeLayout>