                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="42dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="405dp" />

                <Button
                    android:id="@+id/BtnIngresar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
