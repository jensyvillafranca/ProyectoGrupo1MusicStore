<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/checkboxCancion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:buttonTint="@android:color/white" />

    <ImageView
        android:id="@+id/itemPortadaAudios"
        android:layout_width="99dp"
        android:layout_height="99dp"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_icono_audio"
        android:clipToOutline="true"
        android:src="@drawable/iconodecadaarchivomusica"/>


    <TextView
        android:id="@+id/textviewNombreCancion"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/fuente_jost_global"
        android:gravity="center"
        android:text="Nombre de la canciÃ³n"
        android:textColor="@color/lightGray90"
        android:textSize="14sp" />
</LinearLayout>