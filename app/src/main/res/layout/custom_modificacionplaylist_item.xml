<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_mainIModificacionPlaytem"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageviewListItemImageplaylist"
        android:layout_width="62dp"
        android:layout_height="57dp"
        android:contentDescription="Image"
        android:src="@drawable/social"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/txtListItemNombrePlayList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fuente_jost_global"
        android:text="Nombre PlayList"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/iconLayout"
        app:layout_constraintStart_toEndOf="@+id/imageviewListItemImageplaylist"
        app:layout_constraintTop_toTopOf="@+id/layout_mainIModificacionPlaytem" />




    <TextView
        android:id="@+id/txtListItemCreadoplaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fuente_jost_global"
        android:text="@string/creador"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/iconLayout"
        app:layout_constraintStart_toEndOf="@+id/imageviewListItemImageplaylist"
        app:layout_constraintTop_toBottomOf="@+id/txtListItemNombrePlayList" />

    <TextView
        android:id="@+id/txtListItemBiografia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fuente_jost_global"
        android:text="Biografia"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/iconLayout"
        app:layout_constraintStart_toEndOf="@+id/imageviewListItemImageplaylist"
        app:layout_constraintTop_toBottomOf="@+id/txtListItemCreadoplaylist" />



    <LinearLayout
        android:id="@+id/iconLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


    <ImageView
        android:id="@+id/imageviewPlayListIconoEditar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="Icon 2"
        android:src="@drawable/iconoeditargrupo"
        android:visibility="visible"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>