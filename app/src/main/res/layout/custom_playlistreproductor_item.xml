<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_mainIModificacionPlaytem"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageviewListItemImageplaylists"
        android:layout_width="62dp"
        android:layout_height="57dp"
        android:contentDescription="Image"
        android:src="@drawable/social"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/txtListItemNombrePlayLists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fuente_jost_global"
        android:text="Nombre PlayList"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/iconLayout"
        app:layout_constraintStart_toEndOf="@+id/imageviewListItemImageplaylists"
        app:layout_constraintTop_toTopOf="@+id/layout_mainIModificacionPlaytem" />




    <TextView
        android:id="@+id/txtListItemCreadoplaylists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fuente_jost_global"
        android:text="@string/creador"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/iconLayout"
        app:layout_constraintStart_toEndOf="@+id/imageviewListItemImageplaylists"
        app:layout_constraintTop_toBottomOf="@+id/txtListItemNombrePlayLists" />

    <TextView
        android:id="@+id/txtListItemBiografias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fuente_jost_global"
        android:text="Biografia"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/iconLayout"
        app:layout_constraintStart_toEndOf="@+id/imageviewListItemImageplaylists"
        app:layout_constraintTop_toBottomOf="@+id/txtListItemCreadoplaylists" />



    <LinearLayout
        android:id="@+id/iconLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <ImageView
            android:id="@+id/imageviewAudioBuscarAgregar"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@android:color/transparent"
            android:contentDescription="Icon 3"
            android:visibility="visible"
            android:src="@drawable/iconoanadirseagrupo" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>