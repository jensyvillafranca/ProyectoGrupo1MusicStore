<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Auth.Activity_ConfirmaCambioContrasena"
    android:background="@drawable/background">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessParent">
            <Space
                android:layout_width="0dp"
                android:layout_height="8dp" />

            <LinearLayout
                android:id="@+id/btn_ConfirmarCambiarContrasenaAtras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <ImageView

                    android:id="@+id/btn_ConfirmarCorreo_Atras"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:importantForAccessibility="no"
                    android:src="@drawable/iconoatras" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/fuente_jost_global"
                    android:text="@string/atras"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/btnMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:importantForAccessibility="no"
                    android:src="@drawable/menudespegable" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/fuente_jost_global"
                    android:text="@string/cambiarContrasena"
                    android:textColor="#D3D3D3"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/imgviewRecuperarEnviarLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="256dp"
                    android:layout_gravity="center"
                    android:src="@drawable/actualizarcontrasenia" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp">

                    <TextView
                        android:id="@+id/txtcodeVerificacion"
                        android:layout_width="match_parent"
                        android:layout_height="63dp"
                        android:fontFamily="@font/fuente_jost_global"
                        android:justificationMode="inter_word"
                        android:text="@string/LabelRecuperarContra"
                        android:textColor="#D3D3D3"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/inputVerificacion"
                        android:layout_width="300dp"
                        android:layout_height="45dp"
                        android:background="@drawable/edittext"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:labelFor="@+id/txtcodeVerificacion"
                        tools:ignore="LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck,VisualLintTextFieldSize" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <TextView
                        android:id="@+id/txtviewEnviarCodigoNuevamente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:fontFamily="@font/fuente_jost_global"
                        android:text="@string/enviarCodigo"
                        android:textColor="@color/lightGray90"
                        tools:ignore="RtlHardcoded"
                        android:textStyle="bold"
                        android:textSize="11sp"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                    <TextView
                        android:id="@+id/txtviewActivaLetras_Nueva"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/fuente_jost_global"
                        android:justificationMode="inter_word"
                        android:textColor="#D3D3D3"
                        android:textSize="12sp"
                        android:textStyle="bold"></TextView>
                    <TextView
                        android:id="@+id/txtviewCronometro_NuevaC"
                        android:layout_width="276dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="0dp"
                        android:enabled="false"
                        android:gravity="center"
                        android:text="00:00"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:visibility="invisible">
                    </TextView>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>

                    <Button
                        android:id="@+id/btn_Verificar"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/button"
                        android:fontFamily="@font/fuente_jost_global"
                        android:text="@string/verificar"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck,VisualLintButtonSize" />



                </LinearLayout>



                </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</ScrollView>