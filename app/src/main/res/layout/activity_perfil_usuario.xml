<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Perfil.Activity_PerfilUsuario"
    android:background="@drawable/background"
    android:paddingTop="15dp">

<FrameLayout
android:layout_width="match_parent"
android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/btnAtras">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/iconoatras"
                android:importantForAccessibility="no"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/atras"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textStyle="bold"/>

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/menudespegable"
            android:importantForAccessibility="no" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNombreCompletoPerfilPersonal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>


<FrameLayout
    android:layout_width="340dp"
    android:layout_height="690dp"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_gravity="center_horizontal"
        android:importantForAccessibility="no"
        android:src="@drawable/circuloadebajodeimagendeperfil"
        tools:ignore="ImageContrastCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="610dp"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                android:id="@+id/imgPerfilPersonalUsuario"
                android:layout_marginTop="-224dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/pfp"
                android:importantForAccessibility="no" />


                <FrameLayout
                    android:background="@drawable/cuadrotransparenteblancodeperfil"
                    android:layout_width="match_parent"
                    android:layout_marginTop="80dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="80dp"/>

                        <TextView
                            android:id="@+id/txtUsernamePerfilPersonal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/username"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/txtCorreoPerfilPersonal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/email"
                            android:textSize="13sp"
                            android:textColor="#D3D3D3"
                            android:layout_gravity="center"/>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="5dp"/>

                        <LinearLayout
                            android:id="@+id/layout_seguir"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                            <Button
                                android:id="@+id/btnSeguidoSeguir"
                                android:layout_width="320dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/botonseguir"
                                android:text="@string/seguir"
                                android:textColor="@color/whiteseguir" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_confirmar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                            <Button
                                android:id="@+id/btnConfirmarSeguir"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/botonseguir"
                                android:text="@string/confirmar"
                                android:textColor="@color/whiteseguir" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                            <Button
                                android:id="@+id/btnEliminarSeguir"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/botonseguido"
                                android:text="@string/eliminar"
                                android:textColor="@color/whiteseguir" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="10dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/underline"/>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="5dp"/>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    tools:ignore="TooDeepLayout">

                                    <Space
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        tools:ignore="TooDeepLayout" />

                                    <LinearLayout
                                        android:id="@+id/layoutVerSeguidores"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/txtSeguidores"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/followers"
                                            android:textColor="@color/white"
                                            android:textSize="18sp"
                                            android:textStyle="bold"
                                            android:layout_gravity="center"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/seguidores"
                                            android:textSize="15sp"
                                            android:textColor="#D3D3D3"
                                            android:layout_gravity="center"/>

                                    </LinearLayout>

                                    <Space
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"/>

                                    <LinearLayout
                                        android:id="@+id/layoutVerSeguidos"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/txtSiguiendo"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/following"
                                            android:textColor="@color/white"
                                            android:textSize="18sp"
                                            android:textStyle="bold"
                                            android:layout_gravity="center"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/siguiendo"
                                            android:textSize="15sp"
                                            android:textColor="#D3D3D3"
                                            android:layout_gravity="center"/>

                                    </LinearLayout>

                                    <Space
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"/>

                                </LinearLayout>

                            </FrameLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="5dp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/underline"/>

                            <FrameLayout
                                android:id="@+id/layout_publico"
                                android:visibility="visible"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingHorizontal="15dp">

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="8dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/gruposfavs"
                                        android:textColor="@color/white"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:layout_gravity="center"/>

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="4dp"/>

                                    <Button
                                        android:id="@+id/btnGrupo1"
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:background="@drawable/border"
                                        android:text="@string/grupo1"
                                        android:textColor="@color/black"
                                        android:textAllCaps="false"
                                        tools:ignore="TouchTargetSizeCheck" />

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="4dp"/>

                                    <Button
                                        android:id="@+id/btnGrupo2"
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:background="@drawable/border"
                                        android:text="@string/grupo2"
                                        android:textColor="@color/black"
                                        android:textAllCaps="false"
                                        tools:ignore="TouchTargetSizeCheck" />

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="4dp"/>

                                    <Button
                                        android:id="@+id/btnGrupo3"
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:background="@drawable/border"
                                        android:text="@string/grupo3"
                                        android:textColor="@color/black"
                                        android:textAllCaps="false"
                                        tools:ignore="TouchTargetSizeCheck" />

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="2dp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/playlist"
                                            android:textColor="@color/white"
                                            android:textSize="15sp"
                                            android:textStyle="bold"
                                            android:layout_gravity="center"/>

                                        <Space
                                            android:layout_width="match_parent"
                                            android:layout_height="2dp" />

                                        <HorizontalScrollView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal">

                                                <LinearLayout
                                                    android:id="@+id/playlist1"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical"
                                                    tools:ignore="UseCompoundDrawables">

                                                    <ImageView
                                                        android:layout_width="80dp"
                                                        android:layout_height="80dp"
                                                        android:importantForAccessibility="no"
                                                        android:src="@drawable/playlist"
                                                        tools:ignore="ImageContrastCheck" />

                                                    <TextView
                                                        android:id="@+id/txtPlaylistName"
                                                        android:layout_width="80dp"
                                                        android:layout_height="wrap_content"
                                                        android:text="@string/playlist1"
                                                        android:textSize="13sp"
                                                        android:textColor="#D3D3D3"
                                                        android:textAlignment="center"
                                                        android:gravity="center_horizontal" />

                                                </LinearLayout>

                                                <Space
                                                    android:layout_width="8dp"
                                                    android:layout_height="wrap_content"/>

                                            </LinearLayout>

                                        </HorizontalScrollView>


                                    </LinearLayout>

                                </LinearLayout>

                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/layout_privado"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingHorizontal="15dp">

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="200dp"
                                            android:layout_gravity="center"
                                            android:alpha="0.8"
                                            android:src="@drawable/iconorecuperarcontrasena"/>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <Space
                                                android:layout_width="match_parent"
                                                android:layout_height="170dp"/>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/privada"
                                                android:textColor="@color/white"
                                                android:layout_gravity="center"
                                                android:textSize="20sp"
                                                android:textStyle="bold"/>

                                        </LinearLayout>

                                    </FrameLayout>

                                </LinearLayout>

                            </FrameLayout>

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>



            </FrameLayout>

        </FrameLayout>

    </LinearLayout>

</FrameLayout>

</FrameLayout>

    </ScrollView>